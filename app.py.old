from PyQt5 import uic, QtWidgets
from main_window import *
import sys


qtCreatorFile = "mainwindow.ui"


def say_hi():
    print("hi")


class HomeScreen(QtWidgets.QMainWindow):
    def __init__(self):
        # create window
        QtWidgets.QMainWindow.__init__(self)

        # load design from UI file
        self.ui = uic.loadUi(qtCreatorFile)

        self.ui.pushButton.clicked.connect(self.hello)

        # show window
        self.ui.show()

    def hello(self):
        say_hi()
        self.ui.hide()


if __name__ == "__main__":
    # create Qt Application
    app = QtWidgets.QApplication(sys.argv)
    # create and display Home Screen
    window = HomeScreen()
    sys.exit(app.exec_())

